<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:padding="16dp"
    tools:context="com.example.macpro.fbtest.view.activitys.GalleryActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_frag_redact_photo"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_logo_person_redact"
            android:layout_width="@dimen/registration_image_width"
            android:layout_height="@dimen/registration_image_height"
            android:src="@drawable/logo_registration"
            android:layout_marginLeft="@dimen/registration_image_margin"
            android:layout_marginRight="@dimen/registration_image_margin"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/colorPrimaryBlue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_image"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/textSizeMedium"
            android:textColor="@color/colorPrimaryBlue"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/registration_input_layout_margin_top">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_name_input_redact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_views"
            android:background="@drawable/edit_text_selector_auth"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/padding_left_views_auth"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/registration_input_layout_margin_top">
        <android.support.design.widget.TextInputEditText
            android:id='@+id/et_email_input_redact'
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_views"
            android:background="@drawable/edit_text_selector_auth"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:paddingLeft="@dimen/padding_left_views_auth"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/registration_input_layout_margin_top">
        <android.support.design.widget.TextInputEditText
            android:id='@+id/et_date_input_redact'
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_views"
            android:background="@drawable/edit_text_selector_auth"
            android:hint="@string/year_of_birth"
            android:maxEms="4"
            android:inputType="number"
            android:lines="1"
            android:paddingLeft="@dimen/padding_left_views_auth"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_redact_save"
        android:layout_width="250dp"
        android:layout_height="@dimen/height_views"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_selector"
        android:text="Save"
        android:textColor="@color/colorWhite"/>

</LinearLayout>
